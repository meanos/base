# Description: Can access non-hidden files in user's $HOME. This is restricted
# because it gives file access to all of the user's $HOME.
# Usage: reserved

#include <abstractions/private-files-strict>

owner @{HOME}/[^.]** r,

# Don't allow reads to this directory, but do allow access to the app-specific
# area (covered in default policy already).
audit deny @{HOME}/snaps/ r,
